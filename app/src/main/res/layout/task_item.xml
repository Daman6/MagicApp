<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/teal_200"
    android:layout_margin="10dp"
    android:id="@+id/taskItem">

    <TextView
        android:id="@+id/taskTitleTv"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text="Doing my dish"
        android:layout_toRightOf="@+id/taskImageIV"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true">
    </TextView>
    <ImageView
        android:id="@+id/taskImageIV"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"></ImageView>

    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_below="@+id/taskImageIV"
        android:layout_centerHorizontal="true"></View>

</RelativeLayout>